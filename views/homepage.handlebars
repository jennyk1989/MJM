<section class="hero is-medium">
    <div class="hero-body">
        <div class="container">
            <h1 class="title has-text-centered">
                Please Login or Signup to continue!
            </h1>
        </div>

        <div class="column is-12">
    <div class="card m-3">
        <header class="card-header has-background-link-light">
            <p class="card-header-title">Login</p>
        </header>

        
        <div class="card-content">
            <div class="field">
                <label class="label">Username:</label>
                    <div class="control">
                        {{!-- input is passed to login.js under "username-login" --}}
                        <input class="input" id="username-login" type="text" placeholder="username">
                    </div>
            </div>
        </div>
        
        <div class="card-content">
            <div class="field">
                <label class="label">Password: </label>
                <div class="control">
                    {{!-- password input is passed to login.js under the id --}}
                    <input class="input" id="password-login" type="text" placeholder="password">
                </div>
            </div>
        </div>
        
        <div class="card-content">
            <div class="field">
                <button class="button is-link" id="login-btn" type="submit">Login!</button>
            </div>
        </div>
        
        <div class="card-content">
            <div class="field">
                <button class="button is-link" id="signup-btn" type="submit">Sign up instead!</button>
            </div>
        </div>
    </div>

    <figure class="image">
        <img src="{{imgFiles.computer}}"> 
    </figure>
</div>
    </div>
    
</section>
